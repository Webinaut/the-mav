---
import Layout from "./Layout.astro";
import "../styles/article-styles.scss";
import { Image } from "astro:assets";
// const { minutesRead } = Astro.props.frontmatter;
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <h3>{frontmatter.description}</h3>
  <div class="image-wrapper">
    <Image src={frontmatter.hero} alt={frontmatter.title} />
    <p set:html={frontmatter.caption} />
  </div>
  <slot />
</Layout>
<style lang="scss">
  h3 {
    margin-top: 0;
    text-align: center;
  }
  .image-wrapper {
    width: 40%;
    margin: 0 auto 1em;
    padding: 0.5em;
    $shadow-color: #f4f4f4;
    box-shadow:
      0 0 3px 3px $shadow-color,
      0 0 3.6px -0.8px $shadow-color,
      0 0 9px -1.7px $shadow-color,
      0 0 21.9px -2.5px $shadow-color;
    & p {
      text-align: center;
      font-size: 0.6em;
      margin-top: var(--pico-typography-spacing-vertical);
    }
  }
  @media only screen and (max-width: 768px) {
    .image-wrapper {
      width: 100%;
    }
  }
</style>
